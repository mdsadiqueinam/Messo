<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/player_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    android:orientation="vertical"
    tools:context=".ui.fragments.NowPlayingFragment">

    <RelativeLayout
        android:id="@+id/layout_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/now_playing_layout_top_height"
        android:layout_alignParentTop="true"
        android:background="@drawable/gradient_bg_reverse"
        android:paddingStart="@dimen/now_playing_layout_top_padding"
        android:paddingEnd="@dimen/now_playing_layout_top_padding">

        <ImageButton
            android:id="@+id/back_btn"
            android:layout_width="@dimen/now_playing_btn_width"
            android:layout_height="@dimen/now_playing_btn_width"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_chevron_left"
            tools:ignore="contentDescription" />

        <TextView
            android:id="@+id/player_title"
            style="@style/TextAppearance.Messo.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/menu_btn"
            android:layout_toEndOf="@+id/back_btn"
            android:gravity="center_horizontal"
            android:text="@string/now_playing" />

        <ImageButton
            android:id="@+id/menu_btn"
            android:layout_width="@dimen/now_playing_btn_width"
            android:layout_height="@dimen/now_playing_btn_width"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_menu"
            tools:ignore="contentDescription" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/now_playing_controllers_layout"
        android:layout_below="@+id/layout_top">

        <ImageView
            android:id="@+id/album_art"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            tools:ignore="contentDescription"
            tools:src="@drawable/music" />

        <ImageView
            android:id="@+id/image_view_gradient"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:background="@drawable/gradient_bg"
            tools:ignore="contentDescription" />

        <TextView
            android:id="@+id/song_title"
            style="@style/TextAppearance.Messo.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/song_detail"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:ellipsize="marquee"
            android:gravity="center_horizontal"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            tools:text="Song Title" />

        <TextView
            android:id="@+id/song_detail"
            style="@style/TextAppearance.Messo.Subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="10dp"
            android:ellipsize="marquee"
            android:gravity="center_horizontal"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:text="Song Artist and Album" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/now_playing_controllers_layout"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:background="@color/primaryDark"
        android:padding="@dimen/now_playing_controllers_layout_padding">

        <SeekBar
            android:id="@+id/seek_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:progressBackgroundTint="@color/primary" />

        <TextView
            android:id="@+id/song_position"
            style="@style/TextAppearance.Messo.Subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/seek_bar"
            android:layout_alignParentStart="true"
            android:textSize="@dimen/audio_duration_text_size"
            tools:text="01:10" />

        <TextView
            android:id="@+id/song_duration"
            style="@style/TextAppearance.Messo.Subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/seek_bar"
            android:layout_alignParentEnd="true"
            android:textSize="@dimen/audio_duration_text_size"
            tools:text="04:10" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/song_duration"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true">

            <ImageButton
                android:id="@+id/shuffle_toggle"
                android:layout_width="@dimen/skip_btn_width"
                android:layout_height="@dimen/skip_btn_width"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/shuffle_btn_margin"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_shuffle"
                tools:ignore="contentDescription" />

            <ImageButton
                android:id="@+id/skip_prev_btn"
                android:layout_width="@dimen/skip_btn_width"
                android:layout_height="@dimen/skip_btn_width"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/skip_btn_margin"
                android:layout_toEndOf="@+id/shuffle_toggle"
                android:background="@color/transparent"
                android:src="@drawable/ic_skip_previous"
                tools:ignore="contentDescription" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/play_pause_btn"
                android:layout_width="@dimen/play_pause_btn_width"
                android:layout_height="@dimen/play_pause_btn_width"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_pause"
                app:backgroundTint="@color/primary"
                app:maxImageSize="34dp"
                app:tint="@android:color/white"
                tools:ignore="contentDescription" />

            <ImageButton
                android:id="@+id/skip_next_btn"
                android:layout_width="@dimen/skip_btn_width"
                android:layout_height="@dimen/skip_btn_width"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/skip_btn_margin"
                android:layout_toStartOf="@+id/repeat_toggle"
                android:background="@color/transparent"
                android:src="@drawable/ic_skip_next"
                tools:ignore="contentDescription" />

            <ImageButton
                android:id="@+id/repeat_toggle"
                android:layout_width="@dimen/skip_btn_width"
                android:layout_height="@dimen/skip_btn_width"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/shuffle_btn_margin"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_repeat"
                tools:ignore="contentDescription" />

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>